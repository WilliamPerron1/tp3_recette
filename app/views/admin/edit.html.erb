
<h1>Edit recette</h1>
<%= form_for :recette, method: :patch do |f| %>

    <p>
        <%= f.label :titre %> <br/>
        <%= f.text_field :titre, size: "50x6", class: "form-control" %>
    </p>

    <p>
        <%= f.label :etapes %> <br/>
        <%= f.text_area :etapes,  size: "50x20", class: "form-control" %>
    </p>

    <p>
        <%= f.submit class: "btn btn-primary" %>
    </p>
<% end %>
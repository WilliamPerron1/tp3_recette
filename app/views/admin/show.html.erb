<h1>admin recette</h1>
<%for user in @users do %>
    <%if user.recettes != [] %>
    <ul>
        <li>
            <%=user.id%>
            <%=user.nom%>
            <%=user.prenom%>
            <ol>
                <%for recette in user.recettes do %>
                    <li>
                    <a href="recettes/<%=recette.id%>"><%=recette.titre%></a>   
                    </li>
                <%end%>
            </ol>
        </li>
    </ul>
    <%end%>
<%end%>

<h2>toute les recette</h2>
<%for recette in @recettes do %>
    <ul>
        <li>
        <a href="recettes/<%=recette.id%>"><%=recette.titre%></a> <a href="recettes/editRecette/<%=recette.id%>">Edit recette</a>
        

        </li>
    </ul>
<%end%>
<a href="recettes/ajoutRecette">Ajout recette</a>


